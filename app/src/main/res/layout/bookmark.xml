<?xml version="1.0" encoding="utf-8"?>
<!-- Bookmark Manager Layout -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    android:orientation="horizontal"
    android:padding="60dip" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="383dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dip"
            android:text="@string/bookmark_txt_title"
            android:textColor="@color/blue"
            android:textSize="30sp" />



        <Button
            android:id="@+id/bookmark_btn_add"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:text="@string/bookmark_btn_add"
            android:textColor="@color/black" />


        <Spinner
            android:id="@+id/bookmark_spinner_list"
            android:layout_width="180dp"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"/>


        <Button
            android:id="@+id/bookmark_btn_go"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bookmark_btn_go"
            android:layout_marginBottom="10dip"/>


        <Button
            android:id="@+id/bookmark_btn_clear"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bookmark_btn_clear"
            android:layout_marginBottom="10dip"/>

    </LinearLayout>

</LinearLayout>